<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/darkModeBackground"
    tools:context=".vistas.Producto.EditarProducto">

    <ImageView
        android:id="@+id/ivProducto"
        android:layout_width="219dp"
        android:layout_height="219dp"
        android:layout_marginTop="52dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_camera"
        tools:srcCompat="@tools:sample/avatars" />

    <Button
        android:id="@+id/bModificar"
        android:layout_width="273dp"
        android:layout_height="54dp"
        android:layout_marginTop="620dp"
        android:background="@color/colorPrimary"
        android:text="Modificar"
        android:textColor="@color/darkModeColor"
        app:layout_constraintEnd_toEndOf="@+id/ivProducto"
        app:layout_constraintStart_toStartOf="@+id/ivProducto"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvEditarNombre"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="304dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name"
        android:textColor="@color/darkModeColor"
        app:layout_constraintEnd_toEndOf="@+id/ivProducto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ivProducto"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/tvEditarCodigo"
        android:layout_width="219dp"
        android:textColor="@color/darkModeColor"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Codigo"
        app:layout_constraintEnd_toEndOf="@+id/ivProducto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ivProducto"
        app:layout_constraintTop_toBottomOf="@+id/tvEditarNombre" />

    <EditText
        android:id="@+id/tvEditarPrecio"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:text="Precio"
        android:textColor="@color/darkModeColor"
        app:layout_constraintEnd_toEndOf="@+id/ivProducto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ivProducto"
        app:layout_constraintTop_toBottomOf="@+id/tvEditarCodigo" />

    <EditText
        android:id="@+id/tvEditarStock"
        android:layout_width="219dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="number"
        android:textColor="@color/darkModeColor"
        android:text="Stock"
        app:layout_constraintEnd_toEndOf="@+id/ivProducto"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/ivProducto"
        app:layout_constraintTop_toBottomOf="@+id/tvEditarPrecio" />

    <Spinner
        android:id="@+id/editPickProveedor"
        android:layout_width="219dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvEditarStock" />
</androidx.constraintlayout.widget.ConstraintLayout>